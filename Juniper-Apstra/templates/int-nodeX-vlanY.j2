apiVersion: nmstate.io/v1
kind: NodeNetworkConfigurationPolicy
metadata:
  name: {{interface}}-policy-{{node}}-vlan{{vlan_id}} 
spec:
  nodeSelector: 
    kubernetes.io/hostname: jun-vex-{{node}}.nca.ihost.com 
  desiredState:
    interfaces:
    - name: {{interface}}.{{vlan_id}} 
      description: vlan {{vlan_id}} set on {{interface}} 
      type: vlan 
      state: up 
      vlan:
         base-iface: {{interface}}
         id: {{vlan_id}}
      ipv4:
        dhcp: false 
        enabled: false
