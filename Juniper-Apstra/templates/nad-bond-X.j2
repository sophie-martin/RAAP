apiVersion: "k8s.cni.cncf.io/v1"
kind: NetworkAttachmentDefinition
metadata:
  name: bond{{vlan}}
  namespace: ansible

spec:
  config: '{
    "cniVersion": "0.3.1",
    "name": "macvlan-bond{{vlan}}",
    "type": "macvlan",
    "master": "bond{{vlan}}",
    "mode": "bridge",
    "ipam":
    {
       "type": "static",
       "addresses": [
                        {
                            "address": "192.168.{{ip1}}.0/24",
                            "gateway": "192.168.{{ip1}}.1"
                        }
                    ],
        "routes": [
                        {
                          "dst": "0.0.0.0/0"
                        }
                  ]
    }
}'
